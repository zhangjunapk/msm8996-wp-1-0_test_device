// Following arguments are supported. 
// ARG0 - Image to debug. 
// ARGn - n > 1 - Script specific arguments 
ENTRY &ARG0 &ARG1 &ARG2 &ARG3 &ARG4 &ARG5

LOCAL &TARGETPKG &RAMENTRYADDR

&TARGETPKG="Msm8974Pkg"
&RAMENTRYADDR=0x00200000

MAIN:
    // Load the memory map
    do std_memorymap

    // Set the cookie to enable SBL1 debug
    DATA.SET EAHB:&SBL1_DEBUG_COOKIE %LONG %LE &DEBUG_COOKIE_VALUE

    // Everything for UEFI    
    IF ("&ARG0"=="appsboot")
    (
        INTERCOM.EXECUTE &APPS0_PORT cd &APPS_BUILDROOT\..\..\..\uefi\rel\4.0\edk2\
  
        // Execute Dxe Debug script
        LOCAL &dbg_script
        IF (OS.DIR("&BOOT_BUILDROOT\QcomPkg"))
        (
            &dbg_script="QcomPkg\Tools\dxe_dbg.cmm"
        )
        ELSE
        (
            &dbg_script="boot_images\QcomPkg\Tools\dxe_dbg.cmm"
        )
        INTERCOM.EXECUTE &APPS0_PORT do &dbg_script &TARGETPKG &RAMENTRYADDR &ARG1
    )

    GOTO EXIT


EXIT:
    ENDDO

FATALEXIT:
    END


    



