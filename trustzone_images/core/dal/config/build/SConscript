Import('env')
import os
env = env.Clone()

# Invoke script based on image env
if env.GetUsesFlag('USES_HYPERVISOR') is True:
   script_fname = "hypervisor.script"   # hypervisor
elif env.has_key('TZOS_IMAGE'):         # qsee
   script_fname = "tz.script"
elif env.has_key('DAL_DEVCFG_OEM_IMG'): # devcfg_img
   script_fname = "oem.script" 
else :
   script_fname = None
   
if (None !=script_fname):
   env.SConscript(script_fname, exports='env')