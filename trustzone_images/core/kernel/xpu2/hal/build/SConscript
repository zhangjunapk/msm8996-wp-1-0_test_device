#-------------------------------------------------------------------------------
# HAL XPU2 Libs
#-------------------------------------------------------------------------------
Import('env')
env = env.Clone()

#-------------------------------------------------------------------------------
# Source PATH
#-------------------------------------------------------------------------------
SRCPATH = "../src/"

env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0) 

#-------------------------------------------------------------------------------
# Internal depends within CoreBSP
#-------------------------------------------------------------------------------
CBSP_APIS = [
   'BUSES',
   'DAL',
   'DEBUGTOOLS',
   'HAL',
   'KERNEL_XPU2',
   'SERVICES',
   'SECUREMSM',
   'MINK',
   'SYSTEMDRIVERS',
   'KERNEL',
   'TZLIBARMV8',
   'TZCHIPSET',
]

env.RequirePublicApi(CBSP_APIS)
env.RequireRestrictedApi(CBSP_APIS)

#-------------------------------------------------------------------------------
# Internal depends within subunit
#-------------------------------------------------------------------------------
env.PublishPrivateApi('KERNEL_XPU2_HAL', [
   '${INC_ROOT}/core/kernel/xpu2/hal/src',
   '${INC_ROOT}/core/kernel/xpu2/hal/config/${XPU2_MSM_ID}',
])

#-------------------------------------------------------------------------------
# Compiler options
#-------------------------------------------------------------------------------
#env.Append(CCFLAGS = "--gnu")

#-------------------------------------------------------------------------------
# HWIO
#-------------------------------------------------------------------------------
if env.has_key('HWIO_IMAGE'):
   env.AddHWIOFile('HWIO', [
      {
         'filename': '${INC_ROOT}/core/kernel/xpu2/hal/config/${XPU2_MSM_ID}/HALxpu2HWIOTarget.h',
         'modules': ['.*XPU.*', '.*RPU.*', '.*APU.*', '.*MPU.*', 'BIMC_S_DDR0', 'BIMC_S_DDR1'],
         'filter-include': ['.*XPU.*', '.*RPU.*', '.*APU.*', '.*MPU.*'],
         'output-offsets': True,
         'header': '#include "msmhwiobase.h"'
      }
   ])
   env.AddHWIOFile('HWIO', [
      {
         'filename': '${INC_ROOT}/core/kernel/xpu2/hal/config/${XPU2_MSM_ID}/HALSOCHWIOTarget.h',
         'modules': ['TCSR_TCSR_REGS'],
         'filter-include': ['.*SOC_HW.*'],
         'output-offsets': True,
         'header': '#include "msmhwiobase.h"'
      }      
   ])

if env.has_key('HYPERVISOR_IMAGE'):
        env.Append(CPPDEFINES = 'XPU2_USES_HYP_IMPL')

#-------------------------------------------------------------------------------
# Sources, libraries
#-------------------------------------------------------------------------------

HAL_XPU2_COMMON_SOURCES = [
   '${BUILDPATH}/HALxpu2.c',
   '${BUILDPATH}/HALxpu2GenImpl.c',
   '${BUILDPATH}/HALxpu2InfoImpl.c',
   '${BUILDPATH}/HALxpu2Impl_unpaged.c',
]

if 'USES_DEVCFG' in env:
   if env['MSM_ID'] != '8998':
     DEVCFG_IMG = ['DAL_DEVCFG_IMG']
     env.AddDevCfgInfo(DEVCFG_IMG,
     {
        'devcfg_xml' : '${BUILD_ROOT}/core/kernel/xpu2/hal/config/${XPU2_MSM_ID}/HALxpu2Data.xml'
     })

HAL_XPU2_PACKOUT_HEADER_FILES = [
   '${BUILDPATH}/HALhwioXpu2Generic.h',
   '${BUILDPATH}/HALxpu2GenImpl.h',
   '${BUILDPATH}/HALxpu2Hwio.h',
   '${BUILDPATH}/HALxpu2Internal.h',
]

HAL_XPU2_PACKOUT_HEADER_FILES += env.FindFiles(
   'HALSOCHWIOTarget.h',
   '${INC_ROOT}/core/kernel/xpu2/hal/config/')
   
HAL_XPU2_PACKOUT_SOURCE_FILES = env.FindFiles(
   '*.c',
   '${INC_ROOT}/core/kernel/xpu2/hal/')

env.CleanPack(['TZOS_IMAGE'],
              HAL_XPU2_PACKOUT_HEADER_FILES)

env.CleanPack(['TZOS_IMAGE'],
              HAL_XPU2_PACKOUT_SOURCE_FILES)

#-------------------------------------------------------------------------------
# Add Libraries to image
#-------------------------------------------------------------------------------

env.AddBinaryLibrary(['TZOS_IMAGE', 'HYPERVISOR_IMAGE'],
                     '${BUILDPATH}/HALxpu2TZOS',
                     [HAL_XPU2_COMMON_SOURCES])

