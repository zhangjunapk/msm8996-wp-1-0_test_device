Import('env')
env = env.Clone()

#-------------------------------------------------------------------------------
# Source PATH
#-------------------------------------------------------------------------------
SRCPATH = "${BUILD_ROOT}/core/securemsm/sse/SecureTouch/controller/"

env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0)

#-------------------------------------------------------------------------------
# Compiler, object, and linker definitions
#-------------------------------------------------------------------------------

env.Append(CPPPATH = "${COREBSP_ROOT}/securemsm/sse/SecureTouch/controller/inc")
env.Append(CPPPATH = "${COREBSP_ROOT}/securemsm/sse/qsee/SecureTouch/drTs/controller/inc")
env.Append(CPPPATH = "${COREBSP_ROOT}/securemsm/sse/SecureTouch/controller/chipset/${CHIPSET}/inc")

INC_PATH_API = ["${INC_ROOT}/core/api/kernel/libstd/stringl"]
env.Append(CPPPATH = INC_PATH_API)

#-------------------------------------------------------------------------------
# Sources, libraries
#-------------------------------------------------------------------------------

SOURCES = [
  '${BUILDPATH}/src/atmel_mxt_ts.c',
  '${BUILDPATH}/src/synaptics_ts.c',
]

#-------------------------------------------------------------------------------
# Add Libraries to image
#-------------------------------------------------------------------------------

env.AddLibrary([
  'SECUREUISAMPLE_IMAGE',
  'SECUREUISAMPLE64_IMAGE',
  'FIDOSUI_IMAGE',
  'SAMPLEAPP_IMAGE',
  'SAMPLEAPP64_IMAGE',
  ],
  '${BUILDPATH}/drts_controller_${CHIPSET}',
  SOURCES)
