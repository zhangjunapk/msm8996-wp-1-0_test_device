Import('env')
env = env.Clone()

#-------------------------------------------------------------------------------
# Source PATH
#-------------------------------------------------------------------------------
SRCPATH = "${BUILD_ROOT}/core/securemsm/trustzone/qsapps/smplcert"
env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0)

#-------------------------------------------------------------------------------
# Compiler, object, and linker definitions
#-------------------------------------------------------------------------------
INC_PATH = [
  "${INC_ROOT}/core/api/services",
  "${INC_ROOT}/core/api/securemsm/trustzone/qsee",
  "${INC_ROOT}/core/securemsm/trustzone/qsee/mink/include",
  "${INC_ROOT}/core/api/kernel/libstd/stringl",
  "${INC_ROOT}/core/securemsm/trustzone/qsapps/smplcert/src",
]
env.Append(CPPPATH = INC_PATH)
env.RequireRestrictedApi('SMPLCERT')
#----------------------------------------------------------------------------
# App core Objects
#----------------------------------------------------------------------------
APP_CORE_ENTRY_SOURCES = [
      '${BUILDPATH}/src/app_main.c',
      '${BUILDPATH}/src/CCertValidate.c',
]

#-------------------------------------------------------------------------------
# Add Libraries to image
#-------------------------------------------------------------------------------
env.AddObject('SMPLCERT_IMAGE', APP_CORE_ENTRY_SOURCES)

#-------------------------------------------------------------------------------
# Add metadata to image
#-------------------------------------------------------------------------------
md = {
   'appName':    'smplcert',
   'privileges': ['default'],
   'services':   ['CertValidate'],
   'acceptBufSize': 8192,
}

env.AddSecureAppMetadata('SMPLCERT_IMAGE', md )

#-------------------------------------------------------------------------------
# Load sub scripts
#-------------------------------------------------------------------------------
env.LoadSoftwareUnits()
env.LoadAPIUnits()
