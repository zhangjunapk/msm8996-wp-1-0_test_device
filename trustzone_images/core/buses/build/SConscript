Import('env')

if 'ARMTOOLS' in env:
   #-------------------------------------------------------------------------------
   # Convert warnings to errors in all Buses components
   #-------------------------------------------------------------------------------
   #env.Append(CFLAGS = "--diag_error=warning ")
   env.Append(CFLAGS = "")

if 'HEXAGON_TOOLS' in env:
   #-------------------------------------------------------------------------------
   # Convert warnings to errors in all buses components
   #-------------------------------------------------------------------------------
   env.Append(CFLAGS = "-Werror ")

env.LoadSoftwareUnits()
