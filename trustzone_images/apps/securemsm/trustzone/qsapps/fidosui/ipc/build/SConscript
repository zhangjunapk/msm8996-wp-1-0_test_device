Import('env')
env = env.Clone()

#-------------------------------------------------------------------------------
# Source PATH
#-------------------------------------------------------------------------------
SRCPATH = "${BUILD_ROOT}/apps/securemsm/trustzone/qsapps/fidosui/ipc"
env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0)

#-------------------------------------------------------------------------------
# Compiler, object, and linker definitions
#-------------------------------------------------------------------------------
INC_PATH = [
  "${INC_ROOT}/core/api/services",
  "${INC_ROOT}/core/api/securemsm/trustzone/qsee",
  "${INC_ROOT}/core/securemsm/trustzone/qsee/include",
  "${INC_ROOT}/core/securemsm/trustzone/qsee/mink/include",
  "${INC_ROOT}/core/api/kernel/libstd/stringl",
  "${INC_ROOT}/core/securemsm/trustzone/qsapps/fidosui/ipc/src",
]
env.Append(CPPPATH = INC_PATH)

#----------------------------------------------------------------------------
# App core Objects
#----------------------------------------------------------------------------
IPC_SOURCES = [
      '${BUILDPATH}/src/CFidoSuiToken.c',
]


IPC_HEADERS = [
      '${BUILDPATH}/src/CFidoSuiToken_open.h',
      '${BUILDPATH}/inc/FidoSuiToken.h',
]

#-------------------------------------------------------------------------------
# Add Libraries to image
#-------------------------------------------------------------------------------
env.AddBinaryObject('FIDOSUI_IMAGE', IPC_SOURCES)

#-------------------------------------------------------------------------------
# Pack out files
#-------------------------------------------------------------------------------
env.CleanPack('FIDOSUI_IMAGE', IPC_HEADERS)


#-------------------------------------------------------------------------------
# Load sub scripts
#-------------------------------------------------------------------------------
env.LoadSoftwareUnits()
env.LoadAPIUnits()
