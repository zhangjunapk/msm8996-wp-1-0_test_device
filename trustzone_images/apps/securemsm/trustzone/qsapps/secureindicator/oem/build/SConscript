#===============================================================================
Import('env')
env = env.Clone()

#-------------------------------------------------------------------------------
# Source PATH
#-------------------------------------------------------------------------------
SRCPATH = "${BUILD_ROOT}/apps/securemsm/trustzone/qsapps/secureindicator/oem/src"

env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0)

#-------------------------------------------------------------------------------
# Compiler, object, and linker definitions
#-------------------------------------------------------------------------------

#----------------------------------------------------------------------------
# App core Objects
#----------------------------------------------------------------------------   
APP_CORE_ENTRY_SOURCES = [      
        '${BUILDPATH}/si_oem.c',
]

app_core_obj = env.Object(APP_CORE_ENTRY_SOURCES)

#-------------------------------------------------------------------------------
# Add Libraries to image
#-------------------------------------------------------------------------------
env.AddLibrary(['SECUREINDICATOR_IMAGE'], '${BUILDPATH}/secureindicator_oem', app_core_obj)


#-------------------------------------------------------------------------------
# Load sub scripts
#-------------------------------------------------------------------------------
env.LoadSoftwareUnits()
