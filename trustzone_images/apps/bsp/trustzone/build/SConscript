import os
import glob
Import('env')

if env.has_key('PRINT_BUILD_BANNER'):
   print "\n"
   print "------------------------------------------------------------------------------"
   print "   Loading Bootloaders build system"
   print "------------------------------------------------------------------------------"

#------------------------------------------------------------------------------
# Load TARGET scripts
#------------------------------------------------------------------------------
# glob target files
image_scripts = glob.glob('../*/build/SConscript')

# now load scripts
env.SConscript(image_scripts, exports='env')
